version: '2'
services:

  web:
    image: experiencedevops/node-mongo-react:latest
    ports:
      - "4000:4000"
    depends_on:
      - mongodb
    networks:
      - all
  mongodb:
    image: mongo:3.4
    command: mongod --smallfiles
    networks:
      - all
  myreact:
    image: httpd
    volumes:
      - ./reactapp:/usr/local/apache2/htdocs
    ports:
      - "80:80"
    depends_on:
      - web
    networks:
      - all

networks:
  all:
